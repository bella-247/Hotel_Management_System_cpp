{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "by-gdb",
        "request": "launch",
        "name": "Launch(gdb)",
        "program": "${fileBasenameNoExtension}",
        "cwd": "${workspaceRoot}"
    },
      {
          "name": "C/C++ Debug",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/main.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:/MinGW/bin/g++.exe",  // Update if gdb is elsewhere
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "build and run"
      }
  ]
}
